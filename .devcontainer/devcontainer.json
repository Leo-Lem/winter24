{
	"name": "Latex",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"SCHEME": "minimal",
			"TEX_PACKAGES": "algorithm2e environ subfig caption amsmath geometry hyperref xcolor docmute import etoolbox pgf ifoddpage tools relsize float epstopdf-pkg"
		}
	},
	"mounts": [
		"source=${localEnv:HOME}/.tex,target=/home/vscode/texmf/tex/latex,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"James-Yu.latex-workshop",
				"eamodio.gitlens",
				"GitHub.copilot"
			],
			"settings": {
				"latex-workshop.intellisense.optionalArgsEntries.enabled": false,
				"latex-workshop.synctex.afterBuild.enabled": true,
				"[latex]": {
					"editor.defaultFormatter": "James-Yu.latex-workshop"
				},
				"[tex]": {
					"editor.defaultFormatter": "James-Yu.latex-workshop"
				},
				"latex-workshop.latex.outDir": ".texbuild",
				"latex-workshop.message.warning.show": false,
				"latex-workshop.message.badbox.show": false,
				"latex-workshop.message.error.show": false,
				"latex-workshop.latex.autoClean.run": "never",
				"latex-workshop.latex.clean.args": [
					"-c",
					"%DOC_EXT%",
					"-outdir=%OUTDIR%"
				],
				"latex-workshop.latexindent.args": [
					"%TMPFILE%",
					"-y=defaultIndent: '%INDENT%'"
				],
				"latex-workshop.view.pdf.external.synctex.args": [
					"%LINE%",
					"%PDF%",
					"%DOC_EXT%"
				]
			}
		}
	}
}